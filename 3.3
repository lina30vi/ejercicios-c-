using System;
namespace ejemp3_3
{
    public class Program
    {
        static void Main()
        {
            Console.WriteLine(" por favor Digite la cantidad de lapices a comprar");
            double num = Convert.ToDouble(Console.ReadLine());
            if (num >= 1000)
            {
                double valorTotal = (num * 85) / 100;
                Console.WriteLine("el valor total de la compra de los lapices es de " + valorTotal);
            }
            else if (num < 1000)
            {
                double valorTotal = (num * 90) / 100;
                Console.WriteLine("el valor total de la compra de los lapices es de " + valorTotal);
            }
        }
    }
}
